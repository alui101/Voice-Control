{
    "name": "voice-control",
    "displayName": "VoiceControl",
    "description": "Linting support for python files using `voice-control`.",
    "version": "0.1.0-dev",
    "preview": true,
    "serverInfo": {
        "name": "VoiceControl",
        "module": "voice-control"
    },
    "publisher": "VoiceControlGroup",
    "license": "MIT",
    "homepage": "https://github.com/<my-github>/<my-extension-project>",
    "repository": {
        "type": "git",
        "url": "https://github.com/<my-github>/<my-extension-project>.git"
    },
    "bugs": {
        "url": "https://github.com/<my-github>/<my-extension-project>/issues"
    },
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "voice-control"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false,
            "description": "Virtual Workspaces are not supported with VoiceControl."
        }
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o voice-control.vsix"
    },
    "contributes": {
        "views":{
            "explorer": [
                {
                  "id": "VoiceControl",
                  "name": "Voice Control"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "VoiceControl.showRemappingWindow",
                    "when": "view == VoiceControl",
                    "group": "navigation"
                },
                {
                    "command": "workbench.action.openGlobalSettings",
                    "when": "view == VoiceControl",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "properties": {
                "voice-control.args": {
                    "default": [],
                    "description": "Arguments passed in. Each argument is a separate item in the array.",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array"
                },
                "voice-control.path": {
                    "default": [],
                    "description": "When set to a path to voice-control binary, extension will use that. NOTE: Using this option may slowdown server response time.",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "voice-control.importStrategy": {
                    "default": "useBundled",
                    "description": "Defines where `voice-control` is imported from. This setting may be ignored if `<pytool-module>.path` is set.",
                    "enum": [
                        "useBundled",
                        "fromEnvironment"
                    ],
                    "enumDescriptions": [
                        "Always use the bundled version of `voice-control`.",
                        "Use `voice-control` from environment, fallback to bundled version only if `<pytool-module>` not available in the environment."
                    ],
                    "scope": "window",
                    "type": "string"
                },
                "voice-control.interpreter": {
                    "default": [],
                    "description": "When set to a path to python executable, extension will use that to launch the server and any subprocess.",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "voice-control.showNotifications": {
                    "default": "off",
                    "description": "Controls when notifications are shown by this extension.",
                    "enum": [
                        "off",
                        "onError",
                        "onWarning",
                        "always"
                    ],
                    "enumDescriptions": [
                        "All notifications are turned off, any errors or warning are still available in the logs.",
                        "Notifications are shown only in the case of an error.",
                        "Notifications are shown for errors and warnings.",
                        "Notifications are show for anything that the server chooses to show."
                    ],
                    "scope": "machine",
                    "type": "string"
                }, 
                "voice-control.enableCommandSuggestions": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Command Suggestions"
                  },
                  "voice-control.enableRenamingConfirmation": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable Renaming Confirmation"
                  },
                  "voice-control.numberOfCommandSuggestions": {
                    "type": "number",
                    "default": 5,
                    "description": "Number of Command Suggestions"
                  }
            }
        },
        "commands": [
            {
                "title":"Restart Server",
                "category": "Voice Control",
                "command": "voice-control.restart"
            },
            {
                "command": "VoiceControl.renamedCommandInfo",
                "title": "Renamed command info",
                "category": "Voice Control"
            },
            {
                "command": "VoiceControl.showRemappingWindow",
                "title": "Show Remapping Window",
                "category": "Voice Control",
                "icon": "$(menu)" 
            },
            {
                "command": "workbench.action.openGlobalSettings",
                "title": "Show user settings",
                "icon": "$(gear)"
            }
        ]
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.5",
        "fs-extra": "^11.2.0",
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/vscode": "1.78.0",
        "@types/glob": "^8.1.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.56.0",
        "glob": "^10.3.10",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "ts-loader": "^9.5.1",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}
